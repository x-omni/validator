{
  "name": "@x-omni/validator",
  "version": "4.2.9",
  "description": "validate form asynchronous",
  "typings": "typings/index.d.ts",
  "keywords": [
    "validator",
    "validate",
    "async"
  ],
  "homepage": "https://github.com/x-omni/validator",
  "author": "telanflow@gmail.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:x-omni/validator.git"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "pika-plugin-ts-types",
        {
          "args": [
            "--rootDir",
            "src"
          ]
        }
      ],
      [
        "pika-plugin-build-web-babel",
        {
          "format": "cjs"
        }
      ],
      [
        "pika-plugin-build-web-babel"
      ]
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.[j|t]s?(x)"
    ]
  },
  "bugs": {
    "url": "https://github.com/x-omni/validator/issues"
  },
  "license": "MIT",
  "config": {
    "port": 8010
  },
  "scripts": {
    "test-url": "yarn ts-node tests/url.ts",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write \"{src,__tests__,tests}/**/*.{js,tsx,ts}\"",
    "pub": "np --no-cleanup --no-publish --no-release-draft && npm run build && cd pkg && npm publish --access public --tag latest --with-types",
    "build": "pika-pack build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "coverage:gha": "jest --coverage",
    "version": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/node": "^7.22.19",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@pika/pack": "^0.5.0",
    "@types/jest": "27.x",
    "babel-jest": "27.x",
    "coveralls": "^3.1.1",
    "jest": "27.x",
    "lint-staged": "^7.2.0",
    "np": "9.x",
    "pika-plugin-build-web-babel": "^0.12.2",
    "pika-plugin-ts-types": "0.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{tsx,js,jsx,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "packageManager": "yarn@3.2.2"
}
